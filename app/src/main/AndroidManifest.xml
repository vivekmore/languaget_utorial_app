<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chinesequiz">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:largeHeap="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".ChineseQuizActivity" android:screenOrientation="portrait"/>
        <activity android:name=".SetNotificationActivity" android:screenOrientation="portrait"/>
        <activity android:name=".MainActivity" android:screenOrientation="portrait"/>
        <activity android:name=".LessonActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ScheduleActivity" android:screenOrientation="portrait"/>
        <activity android:name=".TutorialActivity" android:screenOrientation="portrait"/>
        <receiver android:name=".NotificationPublisher"/>

    </application>

</manifest>